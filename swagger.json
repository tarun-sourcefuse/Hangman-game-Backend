{
    "swagger": "2.0",
    "info": {
        "description": "Hangman Game",
        "version": "1.0.0",
        "title": "Hangman Game"
    },
    "host": "localhost:3011",
    "basePath": "/api",
    "schemes": [
        "http"
    ],
    "paths": {
        "/login": {
            "get": {
                "summary": "Login using email",
                "description": "Login using email",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "email",
                        "in": "query",
                        "description": "Used for email login",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "success": true,
                        "description": "Email registered"
                    },
                    "500": {
                        "error": true,
                        "msg": "Invalid email",
                        "description": "Email validation failed"
                    }
                }
            }
        },
        "/startGame": {
            "get": {
                "summary": "Start game session",
                "description": "Start game session",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "email",
                        "in": "query",
                        "description": "Used for email login",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "data": {
                            "word": "string",
                            "attempts": "integer",
                            "correctWords": "array",
                            "guessWords": "array"
                        },
                        "description": "Game session start"
                    },
                    "500": {
                        "error": true,
                        "msg": "Invalid game session.",
                        "description": "Webservice issue"
                    },
                    "400": {
                        "error": true,
                        "msg": "Invalid email.",
                        "description": "Email not registered"
                    }
                }
            }
        },
        "/guessWord": {
            "get": {
                "summary": "Guess word",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "email",
                        "in": "query",
                        "description": "Used for email login",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "character",
                        "in": "query",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "data": {
                            "word": "string",
                            "attempts": "integer",
                            "correctWords": "array",
                            "guessWords": "array"
                        },
                        "description": "Character added and parsed"
                    },
                    "500": {
                        "error": true,
                        "msg": "Word cannot be repeated.",
                        "description": "Word cannot be repeated."
                    }
                }
            }
        }
    },
    "definitions": {
        "ApiResponse": {
            "type": "object",
            "properties": {
                "data": {
                    "type": "object"
                },
                "success": {
                    "type": "boolean"
                },
                "msg": {
                    "type": "string"
                },
                "error": {
                    "type": "string"
                }
            }
        },
        "User": {
            "type": "object",
            "properties": {
                "_id": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "currentGame": {
                    "type": "string",
                    "description": "Refrence to game table"
                }
            },
            "xml": {
                "name": "User"
            }
        },
        "Game": {
            "type": "object",
            "properties": {
                "_id": {
                    "type": "string"
                },
                "word": {
                    "type": "string",
                    "description": "Word to be guessed"
                },
                "hint": {
                    "type": "string",
                    "description": "Hint for word"
                },
                "correctWords": {
                    "type": "array",
                    "description": "Array of correct characters guessed"
                },
                "guessWords": {
                    "type": "array",
                    "description": "Array of characters guessed"
                },
                "attempts": {
                    "type": "integer",
                    "description": "Number of attemps(Max limit is 6)"
                }
            },
            "xml": {
                "name": "User"
            }
        }
    },
    "externalDocs": {
        "description": "Find out more about Hangman Game",
        "url": "https://en.wikipedia.org/wiki/Hangman_(game"
    }
}